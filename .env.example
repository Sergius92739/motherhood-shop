# База данных (для разработки - localhost, для production в контейнере - postgres)
DATABASE_URL="postgresql://motherhood_user:motherhood_password@localhost:5432/motherhood_shop"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT секреты
JWT_ACCESS_SECRET="your-access-token-secret"
JWT_REFRESH_SECRET="your-refresh-token-secret"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# API ключи
YOOKASSA_SHOP_ID="your_shop_id"
YOOKASSA_SECRET_KEY="your_secret_key"
YANDEX_DELIVERY_API_KEY="your_yandex_api_key"
POST_RUSSIA_API_KEY="your_post_russia_api_key"

# Cloudinary для изображений
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"
EMAIL_FROM="noreply@motherhood-shop.ru"

# Sentry
SENTRY_DSN="your_sentry_dsn"
NEXT_PUBLIC_SENTRY_DSN="your_public_sentry_dsn"

# Другое
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NODE_ENV="development"